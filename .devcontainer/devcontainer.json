{
    "name": "ChatGateway Devcontainer",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "chat-gateway",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "cmake.configureOnOpen": true
            }
        }
    },
    "remoteUser": "root"
}